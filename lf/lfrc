set icons false
set ignorecase true
set previewer ~/.config/lf/previewer.sh
set hidden true

cmd on-redraw %{{
  if [ $lf_width -le 250 ]; then
      lf -remote "send $id set ratios 1:2"
  else
      lf -remote "send $id set ratios 1:2:3"
  fi
}}

cmd makeObj %{{
  read -p "Name: " name

  # Check if the input ends with a slash
  if [[ $name == */ ]]; then
      mkdir -p $name
  else
      mkdir -p $(dirname $name) # Ensure parent directories are created
      touch $name
  fi
}}

cmd open &{{
  case $(file --mime-type -Lb "$f") in
    text/*) kitty -e nvim "$f";;
    *) xdg-open "$f"
  esac
}}

cmd delete %{{
  echo $fx
  files=$(printf "$fx" | tr '\n' ';')
  echo Deleting files: $files
  while [ "$files" ]; do
    file=${files%%;*}

    rm -rf "$file"
    if [ "$files" = "$file" ]; then
      files=''
    else
      files="${files#*;}"
    fi
  done
}}

# unmap default maps
map d
map m

# personal maps
map <gt> &{{ kitty }}
map . ${{ lf -remote "send $id \$zsh" }}
map dd delete
map x cut
map <enter> open
map R reload
map e ${{ lf -remote "send $id \$nvim "\$f"" }}
map E &{{ kitty -e nvim "$f" }}
map a makeObj

